{
	"name": "convexa-api",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "pnpm prisma generate",
		"build": "nest build gateway && nest build auth && nest build business",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start && nest start business",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "pm2 start pm2.config.js",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json"
	},
	"dependencies": {
		"@anatine/zod-nestjs": "^2.0.10",
		"@faker-js/faker": "^9.4.0",
		"@nestjs/common": "^10.4.15",
		"@nestjs/core": "^10.4.15",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/microservices": "^11.0.8",
		"@nestjs/platform-express": "^10.4.15",
		"@nestjs/swagger": "^11.0.3",
		"@prisma/client": "^6.3.1",
		"bcrypt": "^5.1.1",
		"pm2": "^5.4.3",
		"pm2-runtime": "^5.4.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.4.9",
		"@nestjs/schematics": "^10.2.3",
		"@nestjs/testing": "^10.4.15",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.14",
		"@types/node": "^20.17.17",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"prettier": "^3.4.2",
		"prisma": "^6.3.1",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.4",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^apps/(.*)$": "<rootDir>/apps/$1",
			"^@app/(.*)$": "<rootDir>/apps/$1"
		},
		"roots": [
			"<rootDir>/apps/"
		]
	}
}
